# Only use one file glob per line e.g. [*.yml] because vscode and prettier can only
# parse configs with one file extension. These tools will ignore a section with more
# than one file glob e.g. *never* do this [*.yml, *.yaml].

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8


# JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = ignore

[*.py]
max_line_length = 100
